<resources>
    <!-- Base application theme. -->
    <style name="PicTappTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:itemTextAppearance">@style/customText</item>
    </style>
    <style name="PicTappTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/customText</item>
    </style>
    <style name="customText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="createAction" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:color">@color/colorWhite</item>
    </style>
</resources>
